page{
  background: #f5f5f5;
}

.input-area{
  background: #ffffff;
  color: #333;
  font-size: 30rpx;
}

.input-item{
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  padding-right: 16rpx;
  position: relative;
}

.input-item .label{
  width: 160rpx;
  margin-right: 16rpx;
}

.input-item .input{
  width: 542rpx
}
.input-item::after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background: #e4e4e4;
  margin-left: 16rpx;
}

.region{
  display: flex;
  align-items: center;
}
.region picker{
  width: 508rpx;
}
.region picker .picker{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.region image{
  width: 56rpx;
  height: 56rpx;
}

.submit-area{
  margin: 64rpx 32rpx 0 32rpx;
}

.submit-area button{
  background: rgba(226,166,75, 0.8);
  color: #ffffff;
  font-size: 30rpx;
}