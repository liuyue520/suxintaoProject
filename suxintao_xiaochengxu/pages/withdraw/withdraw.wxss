/* pages/withdraw/withdraw.wxss */
.hd{
  background: #e88885;
  color: #fff;
  text-align: center;
  font-size: 12px;
  padding: 64rpx 0;
  display: flex;
  justify-content: space-around;
}
.hd .val{
  font-size: 24px;
  margin-bottom: 16rpx;
}
.input-item{
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  padding-right: 16rpx;
  position: relative;
  margin: 16rpx 0 0 0;
}



.input-item .label{
  width: 160rpx;
  margin-right: 16rpx;
}

.input-item .input{
  width: 542rpx
}

.submit{
  border: none;
  color: #fff;
  background: #e88885;
  display: inline-block;
}
.submit::after{
  border: none;
}
.isTip{
  width: 35rpx;
  height: 35rpx;
  vertical-align:bottom;
}
.data-item{
  margin: 8rpx 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  color: #333;
}
.data-item .amount{
  width: 180rpx;
  text-align: center;
  font-size: 20px;
}
.data-item .meta{
  flex: 1;
}

.data-item.pass{
  color: #FF6450;
}

.data-item .meta .add-time{
  color: #999;
  margin-top: 16rpx;
}
.mark{
  display: block;
  width: 100%;
  height: 100%;
  background: black;
  opacity: .3;
  position: fixed;
  top: 0;
  z-index: 888;
}
.close{
  display: none;
}
.TipContext{
  display: block;
  width: 600rpx;
  height: 500rpx;
  background: #fff;
  border-radius: 10rpx;
  position: fixed;
  left: calc(50% - (600rpx / 2));
  top:calc(50% - (500rpx / 2));
  z-index: 998;
}
.TipTitle{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
}
.tiaojian{
  width: 480rpx;
  font-size: 28rpx;
  margin: 0 auto;
  font-weight: 540;
}
.OnlyCondition{
  font-size: 25rpx;
  color:gray;
  width: 480rpx;
  margin: 15rpx auto 0;
}
.isBtn{
  width: 200rpx;
  height: 50rpx;
  background: #e88885;
  color:#fff;
  font-size: 25rpx;
  text-align: center;
  margin:30rpx auto 0;
  border-radius: 25rpx;
  line-height: 50rpx;
}
.xiaofei{
  display: flex;
  background: #e88885;
  color: #fff;
  font-size: 28rpx;
  height: 90rpx;
}
.xiaofei view{
  width: 25%;
  text-align: center;
}
.syorder_info_sum view{
  text-align: center;
  width: 100%;
}
.byorder_info_sum view{
  text-align: center;
  width: 100%;
}
.byincome_log_sum view{
  text-align: center;
  width: 100%;
}
.syincome_log_sum view{
  text-align: center;
  width: 100%;
}