/* pages/profile/profile.wxss */
page{
  background: #f5f5f5;
}
.profile-list{
  margin-top: 16rpx;
  background: #ffffff;
}
.profile-item{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  color: #333333;
  font-size: 16px;
  padding: 16rpx 16rpx;
}
.profile-item:last-child{
  border-bottom: none;
}

.profile-item .profile-title{
  flex: 1;
  margin: 0 16rpx;
}
.profile-item .profile-goto{
  width: 60rpx;
  height: 60rpx;
}

.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}