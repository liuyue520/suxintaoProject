/* pages/supplier_apply/supplier_apply.wxss */
page{
  background: #fff;
}
.header{
  padding: 48rpx 0;
  text-align: center;
  color: #333;
}
.header .logo{
  font-size: 0;
}
.header .logo image{
  width: 120rpx;
  height: 120rpx;
}
.header .title{
  margin-top: 16rpx;
}
.submit_area{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
.submit_area button{
  line-height: 88rpx;
  height: 88rpx;
  background: #e2a64b;
  color: #fff;
  border-radius: 0;
}
.submit_area button::after{
  border: none;
}
.input-area .input-item{
  display: flex;
  align-items: center;
  line-height: 88rpx;
  height: 88rpx;
  padding: 0 32rpx;
}
.input-area .input-item .label{
  width: 160rpx;
}
.input-area .input-item .input{
  text-align: right;
  flex: 1;
}
.input-area .remark{
  margin: 0 32rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
}
.input-area .remark textarea{
  display: block;
  width:100%;
  height: 240rpx;
}
.input-area .upload{
  padding: 16rpx 32rpx;
}
.input-area .upload .tips text{
  color: #999;
  margin-left: 16rpx;
}
.input-area .upload .images{
  margin-top: 16rpx;
}
.input-area .upload .images .image-item{
  display: inline-block;
  width: 137rpx;
  height: 137rpx;
  padding: 16rpx;
  position: relative;
  box-sizing: border-box;
}

.input-area .upload .images .image-item image.upload-image{
  width: 105rpx;
  height: 105rpx;
}
.input-area .upload .images .image-item image.remove{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.input-area .upload .images .image-item.add image.remove{
  display: none;
}
.input-area .upload .images .image-item.add{
  background: #f5f5f5;
  border-radius: 8rpx;
}
.input-area .upload .images .image-item.add image.upload-image{
  transform: scale(0.6);
  opacity: 0.6;
}