
.fans-list{
  margin-top: 8px;
  background: #ffffff;
}
.fans-list .fans{
  padding: 8px;
  border-bottom: 1rpx solid #e4e4e4;
  display: flex;
  align-items: center;
}
.fans-list .fans:last-child{
  border-bottom: 1rpx solid transparent;
}
.fans-list .fans .cover{
  font-size: 0;
  margin-right: 8px;
}
.fans-list .fans .cover image{
  width: 80px;
  height: 80px;
  border-radius: 8px;
}

.fans-list .fans .meta{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 80px;
}

.fans-list .fans .meta .share-rank, .fans-list .fans .meta .add-time{
  color: #999;
}

.tab{
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  color: #333;
  background: #fff;
}

.tab-item{
  flex: 1;
  text-align: center;
  position: relative;
  color: #333;
}
.tab-item.active{
  color: #e2a64b
}
.tab-item.active::after{
  content: " ";
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 4rpx;
  background: #e2a64b;
  width: 100%;
}