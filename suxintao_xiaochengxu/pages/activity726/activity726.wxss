/* pages/activity726/activity726.wxss */
.activity726{
  font-size: 0;
  text-align: center;
}
.activity726 image{
  width: 100%;
}
.activity726.activity726_buy_share{
  display: flex;
  background: #ff0042;
  padding-top: 48rpx;
}
.activity726.activity726_buy_share .buy, .activity726.activity726_buy_share .share{
  position: relative;
  flex: 1;
  text-align: center;
}
.activity726.activity726_buy_share .share button{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: transparent;
}
.activity726.activity726_buy_share .share button::after{
  border: none;
}
.activity726.activity726_buy_share image{
  width: 200rpx;
}
.activity726_video{
  background: #ff0042;
  padding: 32rpx 0;
}
.activity726_video video{
  width: 718rpx;
  height: 538rpx;
}

.modal-activity726{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.modal-activity726 .modal-content{
  font-size: 0;
  display: inline-block;
}

.modal-activity726 .modal-bd image{
  width:750rpx;
  height: 829rpx; 
}

.modal-activity726 .modal-close{
  margin-top: 48rpx;
}

.modal-activity726 .modal-close image{
  width: 64rpx;
  height: 64rpx; 
}
.gohome{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
  text-align: center;
  line-height: 88rpx;
  font-size: 12px;
  color: #333;
  position: fixed;
  right: 16rpx;
  bottom: 240rpx;
}