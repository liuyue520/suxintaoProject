page{

}
.select_box{
 width: 100%;
 position: relative;
}
.select{
 box-sizing: border-box;
 width: 100%;
 height: 70rpx;
 border-radius: 8rpx;
 display: flex;
 align-items: center;
 padding: 0 20rpx;
}
.select_text{
 font-size: 30rpx;
 flex: 1;
 color:#7b7b7b;
}
.select_img{
 width: 40rpx;
 height: 40rpx;
 display: block;
 transition:transform 0.3s;
}
.select_img_rotate{
 transform:rotate(180deg); 
}
.option_box{
 position: absolute;
 top: 70rpx;
 width: 100%;
 box-sizing: border-box;
 height: 0;
 overflow-y: auto;
 border-top: 0;
 background: #fff;
 transition: height 0.3s;
}
.option{
 display: block;
 line-height: 40rpx;
 font-size: 30rpx;
 border-bottom: 1px solid #efefef;
 padding: 10rpx;
color:#7b7b7b;
}

/* 模块 */
.ProfitBox{
  height: 190rpx;
  width: 95%;
  background: #fff;
  margin:10rpx auto;
  display: flex;
}
.BoxLeft{
  width: 50%;
  padding-left: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}
.confirm{
  width: 100%;
  margin-bottom: 15rpx;
  color: #F75E4A;
  font-size: 28rpx;
}
.personal{
  width: 100%;
  font-size: 28rpx;
  color: #7a7a7a;
}
.BoxRight{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  color: #F75E4A;
}