/* pages/search/search.wxss */
page{
  background: #fff;
}
.search-bar{
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 12px;
}
.search-bar .search-bd{
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  line-height: 64rpx;
  background: #e4e4e4;
  border-radius: 32rpx;
  padding: 0 16rpx;
}
.search-bar .search-bd image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.search-bar .search-bd input{
  flex: 1;
}
.search-bar .cancel-btn{
  padding: 0 16rpx;
}

.recommend-keywords{
  font-size: 12px;
  color: #333;
}
.recommend-keywords .hd{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 16rpx;
}

.recommend-keywords .bd{
  padding: 0 16rpx;
}
.recommend-keywords .bd .keywords{
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  color: #333;
  font-size: 12px;
  border-radius: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
  background: #e4e4e4;
}