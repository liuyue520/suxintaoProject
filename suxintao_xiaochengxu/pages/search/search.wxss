/* pages/search/search.wxss */
page{
  background: #fff;
}
.search-bar{
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 12px;
}
.search-bar .search-bd{
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  line-height: 64rpx;
  background: #e4e4e4;
  border-radius: 32rpx;
  padding: 0 16rpx;
}
.search-bar .search-bd image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.search-bar .search-bd input{
  flex: 1;
}
.search-bar .cancel-btn{
  padding: 0 16rpx;
}

.recommend-keywords{
  font-size: 12px;
  color: #333;
}
.recommend-keywords .hd{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 16rpx;
}

.recommend-keywords .bd{
  padding: 0 16rpx;
}
.recommend-keywords .bd .keywords{
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  color: #333;
  font-size: 12px;
  border-radius: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
  background: #e4e4e4;
}


/* 布局 */
page{
  background: #f7f5f6;
}
.ClassifTab{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  margin-bottom: 15rpx;
  /* position: fixed;
  top: 0; */
  width: 100%;
  background: #ffffff;
}
.scrollTopL{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  margin-bottom: 15rpx;
  position: fixed;
  top: 0;
  width: 100%;
  background: #ffffff;
}
.ClassifTab view{
  height: 100rpx;
  line-height: 100rpx;
}
.SelectImg{
  height:30rpx;
  width: 30rpx;
  vertical-align: sub;
}
.ClassifBox{
  width: 100%;
  background: #ffffff;
}

.ClassifState{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background: #ffffff;
}
.paixu{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.Box{
  width: 100%;
  border-radius: 8rpx;
  /* transition: all .2s linear; */
  display: flex;
  margin: 0 0 25rpx;
  box-shadow: 8px 8px 8px 0px #C5BDBC;
  padding: 10rpx;
  box-sizing: border-box;
}
.BoxState{
  width: 46%;
  /* border: 1px solid black; */
  box-sizing: border-box;
  margin:0 15rpx;
  background: #ffffff;
  border-radius: 8rpx;
  /* transition: all .2s linear; */
  padding: 10rpx;
  margin-bottom: 15rpx;
  box-shadow: 0px 8px 8px 0px #C5BDBC;
}
.ImgBox{
  width: 300rpx;
  height: 280rpx;
  margin-left: 15rpx;
  /* border: 1px solid black; */
}
.ImgBox image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.ImgState{
  width: 80%;
  height: 350rpx;
  margin: 0 auto;
  box-sizing: border-box;
  /* border: 1px solid black; */
}
.ImgState image{
  width: 100%;
  height: 100%;
}
.Commodity{
  margin-left: 10rpx;
}

.Title{
  font-size: 30rpx;
  width: 400rpx;
  height: 65rpx;
  padding: 5px;
  font-weight: 500;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.TitleState{
  font-size: 25rpx;
  height: 77rpx;
  padding: 10rpx 5rpx;
