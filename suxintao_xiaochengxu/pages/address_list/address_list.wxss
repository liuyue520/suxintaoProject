/* pages/address_list/address_list.wxss */
page{
  background: #f5f5f5;
}
.consignee{
  background: #ffffff;
  font-size: 12px;
  color: #333;
  margin-top: 16rpx;
  width:100%;
  overflow-x:hidden;
}
.consignee .title{
  padding: 16rpx;
}
.consignee .address{
  color: #666;
  padding: 16rpx;
}
.consignee .handle{
  display: flex;
  align-items: center;
  position: relative;
  padding: 16rpx;
}
.consignee .handle::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2rpx;
  background: #e4e4e4;
  margin-left: 16rpx;
}
.consignee .handle .default{
  flex: 1;
}
.consignee .handle switch{
  transform: scale(0.8)
}
.consignee .handle .other{
  display: flex;
  align-items: center;
  margin-left: 5rpx;
}
.remove{
  margin-right: 6rpx;
}
.submit{
  background: #e2a64b;
  color: #ffffff;
  line-height: 88rpx;
  width: 100%;
  font-size: 12px;
  text-align: center;
}

.main{
  padding-bottom: 88rpx;
  /* overflow-y: scroll; */
}

.bottom{
  width: 100%;
  height: 88rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  background-color: #f5f5f5;
}

.bottom-nav{
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-top: 1px solid #e4e4e4;
}

.bottom-nav .nav-item{
  padding-top: 4rpx;
  font-size: 20rpx;
  text-align: center;
  flex: 1;
  color: #999999;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottom-nav .nav-item.active{
  color: #e2a64b;
}

.bottom-nav .nav-item .icon-wrapper{
  font-size: 0;
}

.bottom-nav .nav-item image{
  width: 40rpx;
  height: 40rpx;
}