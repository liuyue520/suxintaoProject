page{
  background: #f5f5f5;
}
.input-area{
  background: #fff;
  margin-top: 16rpx;
  font-size: 16px;
  color: #333333;
}

.input-item{
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 0 0 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.input-item .input-label{
  width: 220rpx;
}
.input-item > input, .input-item .input{
  flex: 1;
  margin-right: 16rpx;
}

.submit{
  background: #FF6450;
  color: #fff;
  font-size: 16px;
  margin: 32px 16px;
}