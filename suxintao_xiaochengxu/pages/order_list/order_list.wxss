/* pages/order_list/order_list.wxss */
page{
  background: #f5f5f5;
}
.order_list{
  margin-top: 16rpx;
}

.order_item{
  margin-bottom: 16rpx;
  background-color: #fff;
  font-size: 30rpx;
}

.order_item .hd{
  color: #333333;
  line-height: 88rpx;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.order_item .hd .order-sn{
  flex: 1;
  font-size: 28rpx;
}

.order_item .bd{
  margin:0 16rpx;
  display: flex;
}

.order_item .bd .goods-image{
  margin: 16rpx;
  margin-left: 0;
  font-size: 0;
}
.order_item .bd .goods-image image{
  width:180rpx;
  height:180rpx;
}
.order_item .bd .goods-meta{
  flex: 1;
  margin: 16rpx;
  font-size: 14px;
  color: #666666;
  /* line-height: 150%; */
  position: relative;
  margin-right: 0;
}
.goods-add-time,.goods-num{
  font-size: 30rpx;
}
.order_item .bd .goods-meta .goods-title{
  color: #333333;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.order_item .bd .goods-meta .other{
  display: flex;
  /* position: absolute; */
  left: 0;
  bottom: 0;
  width: 100%;
}

.order_item .bd .goods-meta .other .goods-num{
  flex: 1;
  text-align: right;
}

.ft{
  display: flex;
  padding: 0 16rpx;
  line-height: 88rpx;
  color: #333333;
  justify-content: space-between;
  font-size: 28rpx;
}

.tab{
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  color: #333;
  background: #fff;
}

.order_item .handle{
  border-top: 1px solid #e4e4e4;
  line-height: 88rpx;
  color: #e2a64b;
  text-align: right;
  padding: 0 16rpx;
}

.order_item .order-meta{
  border-top: 1rpx solid #e4e4e4;
  padding: 16rpx;
  font-size: 28rpx;
}

.order_item .handle .handle-item{
  display: inline-block;
  margin-left: 16px;
}

.tab-item{
  flex: 1;
  text-align: center;
  position: relative;
  color: #333;
}
.tab-item.active{
  color: #e2a64b
}
.tab-item.active::after{
  content: " ";
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 4rpx;
  background: #e2a64b;
  width: 100%;
}

.goods-attr{
  color: #999;
  margin-top: 8rpx;
}
.goods-attr .attr-item{
  display: inline-block;
  padding: 6rpx;
  border: 1rpx solid #e4e4e4;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  font-size: 10px;
  line-height: 24rpx;
}
.copy{
  display: inline-block;
  margin-left: 16rpx;
  color: #e2a64b;
}